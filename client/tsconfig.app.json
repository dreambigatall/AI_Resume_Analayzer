{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Add these for path aliasing */
    "baseUrl": ".", // Sets the base directory for module resolution
    "paths": {
      "@/*": ["../src/*"] // Or "./src/*" if tsconfig.app.json is in the root.
                           // Adjust based on the location of tsconfig.app.json
                           // relative to your 'src' directory.
                           // If 'src' is one level up from where tsconfig.app.json is,
                           // then "../src/*" is correct.
                           // If tsconfig.app.json is in the same directory as 'src',
                           // then "./src/*" might be what you need, or just "src/*".
                           // Most commonly, if tsconfig.app.json is in the root,
                           // and your components are in `project_root/src/components`,
                           // then "@/*": ["./src/*"] is standard.
    }
  },
  "include": ["src"] // This ensures files in the 'src' directory are included
}